{
  "manifest_version": 3,
  "name": "AI Translator (i18n Service)",
  "version": "1.0",
  "description": "Translate selected text using Gemini via Spring Boot backend.",
  "permissions": ["scripting", "activeTab", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "host_permissions": ["http://localhost:8080/"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
